    @push('scripts')
    <script>
        function updateFileName(id) {
            const input = document.getElementById('proof-' + id);
            const span = document.getElementById('file-name-' + id);
            if (input.files.length > 0) {
                span.innerText = input.files[0].name;
                span.classList.add('text-indigo-600');
            }
        }

        function confirmDelivery(id) {
            const input = document.getElementById('proof-' + id);
            if (input.files.length === 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'Waduh Bolo!',
                    text: 'Upload bukti foto dulu biyar pelanggan percaya!',
                    customClass: { popup: 'rounded-[1.5rem]' }
                });
                return;
            }

            Swal.fire({
                title: 'Konfirmasi Sampai?',
                text: "Pastikan barang sudah diterima oleh pelanggan ya bolo!",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#4f46e5',
                cancelButtonColor: '#f43f5e',
                confirmButtonText: 'Ya, Sudah Sampai!',
                cancelButtonText: 'Batal',
                customClass: { popup: 'rounded-[2rem]' }
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('complete-form-' + id).submit();
                }
            });
        }
    </script>
